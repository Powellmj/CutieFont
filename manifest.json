{
  "manifest_version": 2,
  "name": "CutieFont",
  "description": "Hey, Listen!",
  "version": "0.7",
  "icons": {
    "16": "./images/thumb16.png",
    "48": "./images/thumb48.png",
    "128": "./images/thumb128.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage",
    "activeTab"
  ],
    "content_scripts": [{
      "matches": ["https://*.slack.com/*"],
        "css": ["styles.css"],
        "js": ["paint.js", "observer.js"]
      }],
  "browser_action": {
    "default_icon": "./images/thumb16.png",
    "default_popup": "popup.html"
  }
}
